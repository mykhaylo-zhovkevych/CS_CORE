{
  "openapi": "3.0.1",
  "info": {
    "title": "LibraryAPI",
    "version": "1.0"
  },
  "paths": {
    "/api/Library/users": {
      "post": {
        "tags": [
          "Library"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Library/users/{id}": {
      "get": {
        "tags": [
          "Library"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Library/items": {
      "post": {
        "tags": [
          "Library"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateItemDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateItemDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateItemDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Library/borrowings": {
      "post": {
        "tags": [
          "Library"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BorrowItemDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/BorrowItemDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/BorrowItemDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Library/{id}": {
      "get": {
        "tags": [
          "Library"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Library/userprofile/{id}": {
      "put": {
        "tags": [
          "Library"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChangeProfileDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ChangeProfileDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ChangeProfileDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BorrowItemDto": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "itemId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "ChangeProfileDto": {
        "type": "object",
        "properties": {
          "userType": {
            "$ref": "#/components/schemas/UserType"
          }
        },
        "additionalProperties": false
      },
      "CreateItemDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "itemType": {
            "$ref": "#/components/schemas/ItemType"
          }
        },
        "additionalProperties": false
      },
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "userType": {
            "$ref": "#/components/schemas/UserType"
          }
        },
        "additionalProperties": false
      },
      "ItemType": {
        "enum": [
          "BoardGame",
          "Book",
          "Magazine",
          "VideoGame"
        ],
        "type": "string"
      },
      "UserType": {
        "enum": [
          "ExternalUser",
          "Student",
          "Teacher",
          "Officer"
        ],
        "type": "string"
      }
    }
  }
}